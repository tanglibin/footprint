.form-item{
  line-height: 80rpx;
  border-bottom: 1px solid #ccc;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.label{margin-right: 12rpx;width: 140rpx;text-align: right;}
.savebtn{margin-top: 80rpx;}
.tips{padding: 60rpx 20rpx;}
.tip{display: block;margin-top: 16rpx;}

.region-page{
  height: 100%;
  background-image: linear-gradient(to bottom, #142437, #406694, #142437);
  box-sizing: border-box;
  border-top: 2rpx solid #666;
  display: flex;
  color: #fff;
}
.scroll-view{height: 100%;}
.province{width: 160rpx;text-align: center;background-color: #102f56;padding-bottom: 140rpx;}
.province-item{line-height: 80rpx;}
.province-item.active{background-color: #142437;color: #ff6780;}

.city{flex: 1;padding-left: 30rpx;padding-bottom: 140rpx;}
.province-txt{color: #ff6780;padding: 30rpx 0 20rpx;display: block;}
.city-item{
  border: 2rpx solid #fff;
  border-radius: 8rpx;
  display: inline-block;
  line-height: 70rpx;
  padding: 0 16rpx;
  min-width: 84rpx;
  text-align: center;
  margin: 0 24rpx 24rpx 0;
}
.city-item.active{border-color: #ff6780;color: #ff6780;}
.foot-btn{background: rgba(0,0,0,0.3);}
.okbtn{margin: 0 auto;height: 80rpx;box-sizing: border-box;}